<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuanhk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".TuanHKApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:theme="@style/Base.Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.comment.CommentActivity" />
        <activity android:name=".ui.comment.like.CommentLikeActivity" />
        <activity android:name=".ui.photo.PhotoActivity" />
        <activity android:name=".ui.photo.like.PhotoLikeActivity" />
        <activity android:name=".demo.DemoActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".login.LoginScreenActivity"></activity>
    </application>

</manifest>